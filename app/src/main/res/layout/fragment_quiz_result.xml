<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/dark_background">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/star_on"
        app:tint="@color/dark_text_primary"
        android:layout_marginBottom="24dp"
        android:contentDescription="Result Icon"/>

    <TextView
        android:id="@+id/result_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lesson Complete!"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/dark_text_primary"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/result_score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/dark_text_primary"
        android:layout_marginBottom="32dp"
        tools:text="Your Score: 4 / 5"/>

    <Button
        android:id="@+id/result_continue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="Continue" />

</LinearLayout>